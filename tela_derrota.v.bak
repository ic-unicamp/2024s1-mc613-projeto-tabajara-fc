module tela_derrota(
    input clk,
    input reset,
    input [9:0] h_counter,
    input [9:0] v_counter,
    output reg [7:0] R,
    output reg [7:0] G,
    output reg [7:0] B
);

// Defina a escala do objeto
localparam SCALE = 3;

// Coordenadas da caveira
localparam SKULL_POS_X = 100; // Posição X inicial da caveira
localparam SKULL_POS_Y = 50;  // Posição Y inicial da caveira

// Padrão da caveira
localparam SKULL_PATTERN [8][8] = {
    // 00000000
    // 01111110
    // 01111110
    // 01111110
    // 00111100
    // 00111100
    // 01111110
    // 00000000
    8'b00111100,
    8'b01111110,
    8'b01111110,
    8'b01111110,
    8'b00111100,
    8'b00111100,
    8'b01111110,
    8'b00111100
};

// Bloco para pintar a caveira na tela
always @(h_counter or v_counter or reset) begin
    integer orig_x;
    integer orig_y;

    if (reset) begin
        R = 8'b0;
        G = 8'b0;
        B = 8'b0;
    end else begin
        // Inicialize a cor para preto
        R = 8'b0;
        G = 8'b0;
        B = 8'b0;
        // Desenhar a caveira
        if ((h_counter >= SKULL_POS_X) && (h_counter < SKULL_POS_X + 8 * SCALE) && 
            (v_counter >= SKULL_POS_Y) && (v_counter < SKULL_POS_Y + 8 * SCALE)) begin
            // Calcule a posição na grade original de 8x8
            orig_x = (h_counter - SKULL_POS_X) / SCALE;
            orig_y = (v_counter - SKULL_POS_Y) / SCALE;

            // Verifique o bit correspondente no padrão da caveira
            if (SKULL_PATTERN[orig_y][orig_x]) begin
                // Defina a cor para branco
                R = 8'hFF;
                G = 8'hFF;
                B = 8'hFF;
            end
            else
                R = 0;
                G = 0;
                B = 0;
        end
    end
end

endmodule